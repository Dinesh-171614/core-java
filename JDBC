import java.sql.*;

public class JDBCExample {
    public static void main(String[] args) {
        try {
            // 1. Load JDBC driver
            Class.forName("com.mysql.cj.jdbc.Driver");

            // 2. Connect to MySQL (database: testdb)
            Connection con = DriverManager.getConnection(
                "jdbc:mysql://localhost:3306/testdb", // URL
                "root",                               // username
                ""                                    // password (empty in XAMPP)
            );

            // 3. Create statement
            Statement stmt = con.createStatement();

            // 4. Run SQL query (insert example)
            String query = "INSERT INTO students VALUES (1, 'Dinesh')";
            int rows = stmt.executeUpdate(query);

            System.out.println(rows + " row inserted successfully.");

            // 5. Close connection
            con.close();
        } catch (Exception e) {
            e.printStackTrace();
        }
    }
}
